 <html>
<head>
  <title>Recommended Hospitals</title>
  <link href="/css/styles7.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Alkatra:wght@400;600&family=Barlow+Condensed:wght@300&family=Fira+Sans:wght@300&family=Inter&family=Lato&family=Manrope:wght@500&family=Montserrat&family=Nunito+Sans&family=Open+Sans&family=PT+Sans&family=Poppins&family=Public+Sans:wght@300&family=Rancho&family=Roboto:wght@300&family=Rubik:wght@300&family=Sacramento&family=Ysabeau:wght@400;500&display=swap" rel="stylesheet">
</head>
<body>
  <div class="first">
    <img class="image" src="https://us.123rf.com/450wm/mantinov/mantinov2004/mantinov200400007/143789285-help-for-health-icon-logo-vector-graphic-design-helping-hands-inside-medical-cross-sign.jpg?ver=6" alt="logo">
    <h2 class="heading">HospitaLCare</h2>
  </div>
  <div class="second">
    <!--<h1>Recommended Hospitals</h1>-->
    <img class="hospital_img" src="https://images.unsplash.com/photo-1566438480900-0609be27a4be?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8aW1hZ2V8ZW58MHx8MHx8&w=1000&q=80" alt="Hospital Image">
    <div class="hospital-profile">
      <h2>Hospital Name: <%= hospital_datas.hospital %></h2>
      <p>Address: <%= hospital_datas.place %></p>
      <p class="rating">Rating: <%= hospital_datas.rating %> / 5</p>
      <p>Number of Beds Available: <%= hospital_datas.rating %></p>
      <button class="button">Contact: <%= hospital_datas.phonenumber %></button>
    </div>
  </div>
  <div class="third">
    <p class="text">Services Provided</p>
    <table class="done">
      <tr>
        
<td class="option5">
<% hospital_datas.feature.forEach(function(feature) { %>
      <li class="option1">
        <img class="img" src="https://i.pinimg.com/564x/98/78/0d/98780d1e8d1f20183cc82e0c4360af45.jpg" alt=" ">
        <span class="btn_1"><%=feature%></span>
      </li>
    <% }); %>
</td>
</tr>
</table>


<table>
<tr class="table-row">
<!--<td class="table-element_1">
<button class="button_1" onclick="window.location.href='//book-a-bed.com'">Book a Bed Now</button>
</td>-->
<td class="table-element_2">
<img class="direction-img" src="https://cdn-icons-png.flaticon.com/512/61/61021.png" alt="search_icon">
<button class="button_2" onclick="window.location.href='//maps.google.com/maps?q=<%= hospital_datas.hospital %>';">Directions to Hospital</button>
</td>
</tr>
</table>

  </div>
</body>
</html>
