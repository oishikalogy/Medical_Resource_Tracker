<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Here</title>
</head>
<link href="css/styles5.css" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Alkatra:wght@400;600&family=Fira+Sans:wght@300&family=Inter&family=Lato&family=Montserrat&family=Open+Sans&family=PT+Sans&family=Poppins&family=Rancho&family=Roboto:wght@300&family=Rubik:wght@300&family=Sacramento&family=Ysabeau:wght@400;500&display=swap" rel="stylesheet">
<body>
    <div class="first">
        <img class="image" src="https://us.123rf.com/450wm/mantinov/mantinov2004/mantinov200400007/143789285-help-for-health-icon-logo-vector-graphic-design-helping-hands-inside-medical-cross-sign.jpg?ver=6" alt="logo">
    <form method= "post" action="/search">
    <table>
        <tr>
            <td class="table-row">
                 <input class="one" type="text" name="location" placeholder="Search Location">
                 <img class="image_1" src="images/place.png">
                 <button type="submit" class="submit-button">üîç</button>
                 
            </td>
            </tr>
    </table>
</form>
<form method= "post" action="/resourcesearch">
    <table>
        <tr>
            <td class="table-row">
                <input  class="another" type="text" name="resource" placeholder="Search Resource">
                <button type="submit" class="resource">üîç</button>
                
            </td>
        </tr>
    </table>
</form>
</div>
<h2 class="heading_1">Hospitals near your location</h2>
<div class="second">
<table>
    <tr>
        <td>
        <form method="post" action="/sort">
    <select class="select_1" >
        <option class="option" name="rate">Rating</option>
        <option class="option" name="distance">Distance</option>
        <option class="option" name="popularity">Popular</option>
    </select>
    <button type="submit" class="select-button">Sort</button>
</td>
</form>
<td>
    <button class="select_1" type="button" name="">Top Rated</button>
</td>
<td>
    <select class="select_2" >
        <option class="option" name="sort">Rating</option>
        <option class="option" name="rate">3</option>
        <option class="option" name="distance">3.5</option>
        <option class="option" name="popularity">4</option>
        <option class="option" name="popularity">4.5</option>
        <option class="option" name="popularity">5</option>
        <option class="option" name="popularity">Any</option>
    </select>
</td>
</table>
</div>
<div class="hospital-container">
<% hospital_datas.forEach(function(hospital) { %>
<div class="hospital-info">

    <a href=""><img class="image_5" src="images/wishlist.png" ></a>
    <table>
        <tr>
           <td>
      <img class="image_6" src="<%= hospital.link %>" alt="hospital_image">
    </td>

    <td>
   
        <h2 class="heading_2">Name of the hospital: <a href="/hospital-details/<%= hospital._id %>"><%= hospital.hospital %></a></h2>
        <button type="button" class="btn">Rating: <%= hospital.rating%></button>
        <p>Address: <%=hospital.address%></p>
        <button type="button" class="button">Contact: <%= hospital.phonenumber%></button>
        <!---<ul class="distance">
            <li><span>Distance in kms</span></li>
        </ul>-->
       <!-- <button class="btn_2"type="button">CONTACT NUMBER</button>-->
        <!--here at most 5 features can be there-->
        <table>
            <tr>
            <% if (hospital.feature && hospital.feature.length > 0) { %>
        <ul>
          <% hospital.feature.forEach(function(feature) { %>
                <td><button class="features" type="button"><%=feature%></button></td>
          <% }); %>
        </ul>
      <% } %>
            </tr>
        </table>
        
        
        <!--img class="image_7" src="images/call.png"-->
    </td>
    </tr>
</table>
<% }) %>
</div>
</div>
</body>
</html>
